@page
@model MSBank.Pages.Account.IndexModel
@{
}


<div class="card">
    <div class="card-header">
        <h1>All Accounts</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Account Number</th>
                <th>Balance</th>
                
                <th></th>
            </tr>
            @foreach (var person in Model.CustomerAccount)
            {
                <tr>
                    <td>
                        <a asp-page="AccountInfo" asp-route-accountId="@person.AccountNumber">@person.AccountNumber</a>

                    </td>
                    <td>@person.Balance</td>
                
                   <td>
                        <a asp-page="Withdraw" asp-route-accountId="@person.AccountNumber">
                            Withdraw
                            <i class='fas fa-arrow-circle-up'></i>
                        </a>
                    </td>

                      <td>
                        <a asp-page="Deposit" asp-route-accountId="@person.AccountNumber">
                            Deposit
                            <i class='fas fa-arrow-circle-down'></i>
                        </a>

                    </td>

               </tr>
            }
        </table>
        
            

    </div>
</div>